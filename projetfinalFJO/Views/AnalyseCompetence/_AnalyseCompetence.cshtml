@model projetfinalFJO.Models.AnalyseViewModel

<h1><u>Compétence</u></h1>
<form asp-action="_CreerCompetence">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAnalyseAc" class="control-label">Numéro d'analyse</label>
                <input asp-for="IdAnalyseAc" class="form-control" />
                <span asp-validation-for="IdAnalyseAc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeCompetence" class="control-label">Code de compétence</label>
                <input asp-for="CodeCompetence" value="@ViewBag.Competence" readonly class="form-control" />
                <span asp-validation-for="CodeCompetence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NiveauTaxonomique" class="control-label">Niveau taxonomique</label>
                <input asp-for="NiveauTaxonomique" class="form-control" />
                <span asp-validation-for="NiveauTaxonomique" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdresseCourriel" class="control-label">Courriel</label>
                <input asp-for="AdresseCourriel" class="form-control" />
                <span asp-validation-for="AdresseCourriel" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Reformulation" class="control-label"></label>
                <textarea asp-for="Reformulation" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                <span asp-validation-for="Reformulation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Context" class="control-label">Contexte</label>
                <textarea asp-for="Context" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                <span asp-validation-for="Context" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SavoirFaireProgramme" class="control-label">Savoir faire</label>
                <textarea asp-for="SavoirFaireProgramme" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                <span asp-validation-for="SavoirFaireProgramme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SavoirEtreProgramme" class="control-label">Savoir être</label>
                <textarea asp-for="SavoirEtreProgramme" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                <span asp-validation-for="SavoirEtreProgramme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Famille" class="control-label">Famille de compétence</label> 
                <button id="AjouterFamilleModal" type="button" class="btn btn-info">Ajouter une famille</button>
                <select asp-for="Famille" class="form-control" asp-items="ViewBag.Idfamille"></select>
                <span asp-validation-for="Famille" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sequence" class="control-label">Séquence de la compétence</label>
                <button id="AjouterSequenceModal" type="button" class="btn btn-info">Ajouter une séquence</button>
                <select asp-for="Sequence" class="form-control" asp-items="ViewBag.Sequence"></select>
                <span asp-validation-for="Sequence" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="button" value="Créer analyse" class="btn btn-info" onclick="AnalyseCompetence()" />
    </div>
</form>


<div>
    <a asp-action="Index" class="btn btn-info" style="background-color:darkblue;border-color:darkblue">Retour à la liste d'analyse</a>
</div>

