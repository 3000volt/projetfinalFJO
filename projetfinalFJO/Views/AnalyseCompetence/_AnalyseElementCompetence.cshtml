@model projetfinalFJO.Appdata.AnalyseElementsCompetence

<h4><u>Éléments de compétences</u></h4>
<input type="hidden" value="@ViewBag.ListeElements" id="listeElements" />

@{
    var compteur = 0;
    foreach (var element in ViewBag.NumeroElem)
    {

        compteur += 1;


        <form>
            <div id="Formulaire_@compteur" class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (ViewBag.Contexte == "ElemNonChoisi")
                    {
                        <div class="form-group">
                            <label asp-for="ElementCompétence" class="control-label"></label>
                            <select asp-for="ElementCompétence" asp-items="@ViewBag.Element" class="form-control"></select>
                            <span asp-validation-for="ElementCompétence" class="text-danger"></span>
                        </div>
                    }
                    else if (ViewBag.Contexte == "Prechoisi")
                    {
                        <div class="form-group">
                            <label asp-for="ElementCompétence" class="control-label"></label>
                            <input asp-for="ElementCompétence" class="form-control" value="@element" readonly />
                            <span asp-validation-for="ElementCompétence" class="text-danger"></span>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="NiveauTaxonomique" class="control-label"></label>
                        <select asp-for="NiveauTaxonomique" asp-items="@ViewBag.Taxonomie" class="form-control"></select>
                        <span asp-validation-for="NiveauTaxonomique" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Reformulation" class="control-label"></label>
                        <textarea asp-for="Reformulation" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                        <span asp-validation-for="Reformulation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Context" class="control-label">Contexte</label>
                        <textarea asp-for="Context" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                        <span asp-validation-for="Context" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="SavoirFaireProgramme" class="control-label">Savoir faire</label>
                        <textarea asp-for="SavoirFaireProgramme" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                        <span asp-validation-for="SavoirFaireProgramme" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SavoirEtreProgramme" class="control-label">Savoir être</label>
                        <textarea asp-for="SavoirEtreProgramme" class="form-control" style="margin-top: 0px; margin-bottom: 0px; height: 163px;"></textarea>
                        <span asp-validation-for="SavoirEtreProgramme" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @if ((ViewBag.Contexte == "ElemNonChoisi"))
            {
                 <div class="form-group">
                    <input type="button" class="btn btn-info" value="Enregistrer l'analyse de l'élément de la compétence" id="Ajout_@compteur" onclick="Ajustation2('Ajout_@compteur')" />
                </div>
            }
            else if ((ViewBag.Contexte == "Prechoisi"))
            {
                <div class="form-group">
                    <input type="button" class="btn btn-info" value="Enregistrer l'analyse de l'élément de la compétence" id="Ajout_@compteur" onclick="Ajustation('Ajout_@compteur')" />
                </div>
            }


        </form>


    }
}


