@using Microsoft.AspNetCore.Identity
@using projetfinalFJO.Models.Authentification

@inject SignInManager<LoginUser> SignInManager
@inject UserManager<LoginUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Login" asp-action="Logout" method="post" id="logoutForm" class="navbar-right col-md-3">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Login" asp-action="Register"> Register </a></li>
        <li><a asp-area="" asp-controller="Login" asp-action="Login">Log in</a></li>
    </ul>
}
