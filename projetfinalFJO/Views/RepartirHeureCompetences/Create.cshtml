
@{
    ViewData["Title"] = "Repartition_Heure";
}

<div id="principale">
    <h2>Repartition Des Heures</h2>

    <div id="heuremax">
        <partial name="_PartialRep_Heure" model="ViewBag.CompHeureRep" />
    </div>
    <div id="tabs">
        <ul>
            <li class="loic"><a href="@Url.Action("partialGroupeComp", "RepartirHeureCompetences")">Assigner un groupe à une compétence</a></li>
            <li><a href="@Url.Action("partialGroupe", "RepartirHeureCompetences")">Créer un groupe </a></li>
        </ul>
    </div>
    <div id="session">
        <partial name="_PartialRep_Heure_session" model="ViewBag.SessionRep" />
    </div>
</div>

@section Scripts
    {

<script>
    /*https://jqueryui.com/tabs/#ajax  */
    $(function () {
        $("#tabs").tabs({
            beforeLoad: function (event, ui) {
                ui.jqXHR.fail(function () {
                    ui.panel.html(
                        "Couldn't load this tab. We'll try to fix this as soon as possible. " +
                        "If this wouldn't be a demo.");
                });
            }
        });
    });

    </script>

}
