@model projetfinalFJO.Appdata.ActualisationInformation

@{
    ViewData["Title"] = "Modifier";
}

<h2>Modifier l'actualisation</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modifier">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumActualisation" class="control-label"></label>
                <input asp-for="NumActualisation" readonly class="form-control" />
                <span asp-validation-for="NumActualisation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomActualisation" class="control-label"></label>
                <input asp-for="NomActualisation" class="form-control" />
                <span asp-validation-for="NomActualisation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoProgramme" class="control-label"></label>
                <input asp-for="NoProgramme" readonly class="form-control" />
                <span asp-validation-for="NoProgramme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Approuve" class="control-label"></label>
                @Html.RadioButtonFor(model => model.Approuve, true) Approuvé
                @Html.RadioButtonFor(model => model.Approuve, false) Non approuvé
                @*<input asp-for="Approuve" class="form-control" />*@
                <span asp-validation-for="Approuve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Actualisation">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
