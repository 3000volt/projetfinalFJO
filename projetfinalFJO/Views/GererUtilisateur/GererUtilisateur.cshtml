@model IEnumerable<projetfinalFJO.Models.UtilisateurViewModel>

@{
    ViewData["Title"] = "GererUtilisateur";
}

<h2>Gérer les utilisateurs</h2>


<table class="table table-hover">
    <thead class="card-header">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdresseCourriel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseCourriel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DropDownListFor(modelItem => item.Role, (SelectList)ViewBag.Role, item.Role)
            </td>
            <td>
                @Html.ActionLink("Changer le rôle de l'utilisateur", "ChangerRole", new {  nomRole = item.Role, courriel = item.AdresseCourriel }) |
                @Html.ActionLink("Supprimmer l'utilisateur", "SupprimerUtilisateur", new { courriel = item.AdresseCourriel })
            </td>
        </tr>
}
    </tbody>
</table>
